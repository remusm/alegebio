jQuery(document).ready(function($) {
	$('#products-drop li:last-child').css('border-bottom', '0');
	$('#search').attr('value', "cauta");
	$('#search').focus(function(){
		if($('#search').attr('value') == 'cauta')
			$('#search').attr('value', '');
	});
	$('#search').blur(function(){
		if($('#search').attr('value') == '')
			$('#search').attr('value', 'cauta');
	});
	$('#newsletter').attr('value', "newsletter");
	$('#newsletter').focus(function(){
		if($('#newsletter').attr('value') == 'newsletter')
			$('#newsletter').attr('value', '');
	});
	$('#newsletter').blur(function(){
		if($('#newsletter').attr('value') == '')
			$('#newsletter').attr('value', 'newsletter');
	});

	$('#slider').children('.widget').each(function(){
		var img = $(this).children().eq(0).find('img');
		var text = $(this).children().eq(1).text();
		img.attr('alt', text);
		$(this).replaceWith(img);
	});
	$('#slider').children('img').wrapAll('<div id="images" />');
	$('#slider').append('<div id="controls"></div>');
		$('#query').focus(function(){
			if($(this).val() == 'cauta in catalog')
				$(this).attr('value', '');
		});
			$('#query').focusout(function(){
						if($(this).val() == '')
				$(this).attr('value', 'cauta in catalog');
			});
			$('#newsletter-email').focus(function(){
			if($(this).val() == 'adresa valida de email')
				$(this).attr('value', '');
		});
			$('#newsletter-email').focusout(function(){
						if($(this).val() == '')
				$(this).attr('value', 'adresa valida de email');
			});
		$('#images').cycle({ pager:'#controls',  after:     function() {
				$('#caption').html(this.alt);
			}
	});
		if($('.breadcrumbs').length == 0 )
		{
			$('.page-title').css('top', 0);
		}
		$('#caption').css('display', 'block');
		$("#products-drop > li").each(function(){
			if($(this).find('ul').length > 0)
			{
				$(this).children('a').addClass('drop');
				$(this).find('li').each(function(){
					if($(this).find('ul').length > 0)
						$(this).children('a').addClass('drop-ul');
				});
			}
		});
		$('.drop').click(function(){
		if($(this).parent().hasClass('opened'))
				$(this).parent().removeClass('opened').children('ul').slideUp();
			else
			{
					$(this).parent().parent().children('.opened').removeClass('opened').children('ul').slideUp();
				$(this).parent().addClass('opened').children('ul').slideDown();
			}
			return false;
		});
		$('.drop-ul').click(function(){
			if($(this).parent().hasClass('opened'))
				$(this).parent().removeClass('opened').children('ul').slideUp();
			else
			{
				$(this).parent().parent().children('.opened').removeClass('opened').children('ul').slideUp();
				$(this).parent().addClass('opened').children('ul').slideDown();
			}
			return false;
		});
		$('#products-drop .active').children('a').css('font-weight', 'bold').parent().parent().slideDown().prev().parent().addClass('opened');
